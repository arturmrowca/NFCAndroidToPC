<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/login_form"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#333333" >

        <RelativeLayout
            android:id="@+id/relLayoutReg"
            android:layout_width="fill_parent"
            android:layout_height="411dp"
            android:background="#333333"
            android:orientation="vertical" >

            

            <TextView
                android:id="@+id/confirmation_headline2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="#ff3300"
                android:paddingBottom="4dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="4dp"
                android:text="Create a new InCharge Account:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff" />
            

            <Space
                android:id="@+id/Space3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Space
                android:id="@+id/Space4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Space3" />
            
            <EditText
                android:id="@+id/firstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imageView2"
                android:layout_marginTop="14dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:hint="First name"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:paddingBottom="12dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="12dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff3300"
                android:textColorHint="#ff3300" />
            
            <EditText
                android:id="@+id/lastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/firstName"
                android:layout_marginTop="14dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:hint="Last name"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:paddingBottom="12dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="12dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff3300"
                android:textColorHint="#ff3300" />
            
          <EditText
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/lastName"
                android:layout_marginTop="14dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:hint="Username"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:paddingBottom="12dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="12dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff3300"
                android:textColorHint="#ff3300" />
          
          <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/userName"
                android:layout_marginTop="14dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:paddingBottom="12dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="12dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff3300"
                android:textColorHint="#ff3300" />
          
           <EditText
                android:id="@+id/emailConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/email"
                android:layout_marginTop="14dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:hint="Email Confirmation"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:paddingBottom="12dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="12dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff3300"
                android:textColorHint="#ff3300" />

             <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/emailConfirm"
                android:layout_marginTop="14dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Password"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:paddingBottom="12dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="12dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff3300"
                android:textColorHint="#ff3300" />
            
             <EditText
                android:id="@+id/passwordConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/password"
                android:layout_marginTop="14dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Confirm Password"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:paddingBottom="12dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="12dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff3300"
                android:textColorHint="#ff3300" />
             

            <Button
                android:id="@+id/sendItButton"
                style="@style/AppTheme"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/passwordConfirm"
                android:layout_marginTop="21dp"
                android:layout_weight="1"
                android:background="@drawable/my_multi_state_bg"
                android:paddingBottom="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="4dp"
                android:text="Register"
                android:textColor="#fff" 
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/confirmation_headline2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/image_desc"
                android:src="@drawable/in_charge_logo" />

        </RelativeLayout>

    </ScrollView>